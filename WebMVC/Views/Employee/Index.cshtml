@model IEnumerable<EmpSearch.Models.Employee>

@{
    ViewBag.Title = "Index";
}


    <div class="jumbotron" style="text-align:center; padding:5px; margin:40px 0px 20px 0px">
        @using (Html.BeginForm("Search", "Employee", FormMethod.Post))
        {
        <input type="text" placeholder="Search by Emp Code" class="btn-lg" name="searchItem" />
        <input type="submit" value="Search" class="btn btn-lg btn-primary" />
        }
    </div>
    

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dob)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resigned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResignedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resigned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResignedDate)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
        </tr>
    }

</table>
